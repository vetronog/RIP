<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
            <div class="pull-left">
                 <a href="@Url.Action("Index", "Home")">
                     <img src="~/Images/logo.png" alt="logo" />
                 </a>
            </div>
            <div id="login">
                @if (Session["UserId"] != null)
                {
                    <a href="@Url.Action("LogOut", "Account")">Выход</a>
                }
            </div>
            <div id="login">
                @if (Session["UserId"] == null)
                {
                    <a href="@Url.Action("Auth", "Account")">Войти</a>
                }
                else
                {
                    <a href="@Url.Action("Auth", "Account")">@Session["UserName"]</a>
                }
            </div>
            <button class="btn btn-default" type="button" onclick="location.href='@(Session["UserId"] == null ? Url.Action("Auth", "Account"): Url.Action("AddArticle", "Articles"))'">
                <span class="glyphicon glyphicon-bookmark"></span>
                <span>Добавить статью</span>
            </button>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
